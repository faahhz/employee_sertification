<%- include('../header') %>
<div class="text-center">
    <h2>Update Employee</h2>
</div> <br> <br>

<div class="d-flex justify-content-center col-md-12">
    <form action="/employees/update/<%= employees.id %>" method="POST">
        <div class="form-group row mb-3">
            <label for="" class="col-sm-2 col-form-label">Job </label>
            <div class="col-sm-10">
                <input id="job" name="job" type="text" class="form-control" value="<%= employees.job %>" > </input>
            </div>
        </div>
        <div class="form-group row mb-3">
            <label for="" class="col-sm-2 col-form-label">Age </label>
            <div class="col-sm-10">
                <input id="age" name="age" type="number" class="form-control" min="15" max="65" value="<%= employees.age %>" > </input>
            </div>
        </div>
        <div class="form-group row mb-3">
            <label for="" class="col-sm-2 col-form-label">Email </label>
            <div class="col-sm-10">
                <input id="email" name="email" type="email" class="form-control" value="<%= employees.email %>"> </input>
            </div>
        </div>
        <div class="mb-7 d-flex justify-content-end">
            <button id="submit" type="submit" class="btn btn-danger col-sm-5 ">Submit</button>
        </div>
    </form>
</div>

<%- include('../footer') %>