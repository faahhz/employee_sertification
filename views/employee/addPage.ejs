<%- include('../header') %>
<div class="text-center">
    <h2>Add Employee</h2>
</div> <br> <br>


<div class="d-flex justify-content-center col-md-12">
    <form action="/employees/add" method="POST">
        <div class="form-group row mb-3">
            <label for="name" class="col-sm-2 col-form-label">Name </label>
            <div class="col-sm-10">
                <input id="name" name="name" type="text" class="form-control">
            </div>
            
        </div>
        <div class="form-group row mb-3">
            <label for="job" class="col-sm-2 col-form-label">Job </label>
            <div class="col-sm-10">
                <input id="job" name="job" type="text" class="form-control"> </input>
            </div>
        </div>
        <div class="form-group row mb-3">
            <label for="age" class="col-sm-2 col-form-label">Age </label>
            <div class="col-sm-10">
                <input id="age" name="age" type="number" class="form-control" min="15" max="65" > </input>
            </div>
        </div>
        <div class="form-group row mb-3">
            <label for="email" class="col-sm-2 col-form-label">Email </label>
            <div class="col-sm-10">
                <input id="email" name="email" type="email" class="form-control"> </input>
            </div>
        </div>
        <div class="form-group row mb-3">
            <label for="shipId" class="col-sm-2 col-form-label">Ship </label>
            <div class="col-sm-10">
                <select id="shipId" name="shipId" type="shipId" class="form-control">
                    <% Ships.forEach(ships=>{  %>
                        <option value="<%= ships.id %>"><%= ships.name %></option>
                    <% }) %>
                </select>
            </div>
        </div>
        <div class="mb-7 d-flex justify-content-end">
            <button id="submit" type="submit" class="btn btn-danger col-sm-5 ">Submit</input>
        </div>
    </form>
</div>

<%- include('../footer') %>